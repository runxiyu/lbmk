+	outw(4 | 0x8002, SCH555x_EMI_IOBASE + 2);
+	outl(val | (addr2 << 16), SCH555x_EMI_IOBASE + 4);
+
+	// send message to ec
+	outb(1, SCH555x_EMI_IOBASE);
+
+	// wait for ack
+	for (size_t timeout = 0; timeout < 0xfff; ++timeout)
+		if (inb(SCH555x_EMI_IOBASE + 1) & 1)
+			break;
+}
