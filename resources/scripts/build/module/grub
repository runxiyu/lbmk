[ "x${DEBUG+set}" = 'xset' ] && set -v
set -u -e

main()
{
	printf "Building GRUB\n"

	if [ ! -d "grub/" ]; then
		./download grub
	fi
}

build_grub()
{
	(
	cd grub/

	# clean up first
	[ -d Makefile ] && make distclean

	./bootstrap --gnulib-srcdir=gnulib/ --no-git 

	# build
	./autogen.sh
	./configure --with-platform=coreboot
	make -j$(nproc)
	)
}

main $@
