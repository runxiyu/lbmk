[ "x${DEBUG+set}" = 'xset' ] && set -v
set -u -e

. "include/err.sh"

# clean bucts
# --------------------------------------------------------

main()
{
	[ ! -d "elf/seabios" ] || rm -Rf elf/seabios || \
	    err "cannot remove elf/seabios"
	[ ! -d "seabios/" ] && exit 0

	clean_seabios
}

clean_seabios()
{
	for x in seabios/*; do
		[ ! -d "${x}" ] && continue
		[ "${x}" = "seabios/seabios" ] && continue
		make -C "${x}" distclean || err "cannot distclean tree, ${x}"
	done
}

main $@
