[ "x${DEBUG+set}" = 'xset' ] && set -v
set -u -e

. "include/err.sh"

main()
{
	[ -d "grub/" ] || x_ ./update project repo grub
	build_grub
}

build_grub()
{
	(
	x_ cd grub/
	[ ! -d Makefile ] || x_ make distclean
	x_ ./bootstrap --gnulib-srcdir=gnulib/ --no-git
	x_ ./autogen.sh
	x_ ./configure --with-platform=coreboot
	x_ make -j$(nproc) FS_PAYLOAD_MODULES=""
	)
}

main $@
